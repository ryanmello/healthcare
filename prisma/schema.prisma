generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique
  email     String
  firstName String?
  lastName  String?
  phone     String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
